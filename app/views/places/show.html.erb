<h1><%= @place.name %></h1>
<ul>
    <% for post in @place.posts%>
    <h2> <%= post.title %> </h2>
    <h6><%= post.posted_on %></h6>
    <%= post.description %>
    <br>
    <br>
    <% end %>

    <a href="/posts/new?place_id=<%= @place.id %>">Add a new post</a>

   <p> <a href="/places">Go back to all places</a> </p>

   <p><%= button_to "Delete this place", @place, method: :delete %></p>